{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "strictNullChecks": true,
    "declaration": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
